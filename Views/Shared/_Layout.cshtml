<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Raqmyia</title>
    <meta name="description" content="Raqmyia is the easiest way to sell your digital work online. Whether you're a creator, artist, or entrepreneur, we help you turn your passion into profit." />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <header class="navbar-custom sticky-top">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand d-flex align-items-center" href="/">
                    <i class="fas fa-shopping-bag text-primary me-2 fs-4"></i>
                    <span class="fw-bold fs-4">Gumroad</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#discover">Discover</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#start-selling">Start Selling</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#features">Features</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#pricing">Pricing</a>
                        </li>
                    </ul>

                    <div class="d-flex gap-2">
                        <a href="#signin" class="btn btn-link text-decoration-none">Sign in</a>
                        <a href="#start-selling" class="btn btn-primary px-4">Start selling</a>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="footer-custom">
        <div class="container py-5">
            <div class="row">
                <div class="col-lg-6 mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <i class="fas fa-shopping-bag text-primary me-2 fs-4"></i>
                        <span class="fw-bold fs-4 text-white">Gumroad</span>
                    </div>
                    <p class="text-light-gray mb-4" style="max-width: 400px;">
                        The easiest way to sell your digital work online. Whether you're a creator, artist, or entrepreneur, we help you turn your passion into profit.
                    </p>
                    <div class="d-flex gap-3">
                        <a href="#" class="text-light-gray hover-white"><i class="fab fa-twitter fs-5"></i></a>
                        <a href="#" class="text-light-gray hover-white"><i class="fab fa-instagram fs-5"></i></a>
                        <a href="#" class="text-light-gray hover-white"><i class="fab fa-facebook fs-5"></i></a>
                        <a href="#" class="text-light-gray hover-white"><i class="fab fa-youtube fs-5"></i></a>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-white mb-3">Product</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Features</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Pricing</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Analytics</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">API</a></li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <h5 class="text-white mb-3">Support</h5>
                    <ul class="list-unstyled">
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Help Center</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Contact Us</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Community</a></li>
                        <li class="mb-2"><a href="#" class="text-light-gray text-decoration-none hover-white">Blog</a></li>
                    </ul>
                </div>
            </div>

            <hr class="border-secondary my-4">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="text-light-gray mb-0 small">© 2024 Raqmyia. All rights reserved.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex gap-4 justify-content-md-end justify-content-start mt-3 mt-md-0">
                        <a href="#" class="text-light-gray text-decoration-none hover-white small">Privacy Policy</a>
                        <a href="#" class="text-light-gray text-decoration-none hover-white small">Terms of Service</a>
                        <a href="#" class="text-light-gray text-decoration-none hover-white small">Cookie Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
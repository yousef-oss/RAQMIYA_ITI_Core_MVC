@{
 ViewData["Title"] = "Home Page";
}
   


@model IEnumerable<ITI_Raqmiya_MVC.Models.Product> 

<div class="text-center my-5">
    <h1 class="display-4">Welcome To Raqmiya</h1>
    <p class="lead">Find and explore the latest products below.</p>

    <!-- Search bar -->
    <div class="d-flex justify-content-center my-4">
        <form class="d-flex w-50" asp-controller="Home" asp-action="Index" method="get">
            <input name="searchTerm" class="form-control me-2" type="search" placeholder="Search for products..." aria-label="Search" value="@ViewBag.SearchTerm">
            <button class="btn btn-primary" type="submit">Search</button>
        </form>
    </div>
</div>

<!-- Products list -->
<div class="row row-cols-1 row-cols-md-3 g-4">
    @if (Model != null && Model.Any())
    {
        foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@product.CoverImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-truncate">@product.Description</p>
                        <p class="card-text fw-bold text-primary">$@product.Price</p>
                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12 text-center">
            <p class="text-muted">No products found.</p>
        </div>
    }
</div>

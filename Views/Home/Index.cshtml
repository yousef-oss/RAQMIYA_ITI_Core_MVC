@{
    ViewData["Title"] = "Sell what you love. Get paid instantly.";
}

@if (TempData["WelcomeMessage"] != null)
{
    <div class="alert alert-success text-center" role="alert">
        @TempData["WelcomeMessage"]
    </div>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10">
                <h1 class="hero-title mb-4">
                    Sell what you love.
                    <br />
                    <span class="animated-gradient">Get paid instantly.</span>
                </h1>
                <p class="hero-subtitle mb-5">
                    Raqeem is the easiest way to sell your digital work online. Whether you're a creator, artist, or entrepreneur, we help you turn your passion into profit.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center align-items-center">
                    <a href="#start-selling" class="btn btn-primary btn-lg px-4 py-3 d-flex align-items-center">
                        Start selling for free
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                    <a href="#how-it-works" class="btn btn-outline-secondary btn-lg px-4 py-3 d-flex align-items-center">
                        <i class="fas fa-play me-2 text-primary"></i>
                        Watch how it works
                    </a>
                </div>
            </div>
        </div>

        <!-- Stats -->
        <div class="row mt-5 pt-5 stats-container">
            <div class="col-md-4 text-center mb-4">
                <div class="stat-item">
                    <div class="stat-number animated-gradient">$1B+</div>
                    <div class="stat-label">paid to creators</div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="stat-item">
                    <div class="stat-number animated-gradient">8M+</div>
                    <div class="stat-label">active customers</div>
                </div>
            </div>
            <div class="col-md-4 text-center mb-4">
                <div class="stat-item">
                    <div class="stat-number animated-gradient">500K+</div>
                    <div class="stat-label">creators worldwide</div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section py-5" id="features">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <h2 class="section-title mb-4">Everything you need to sell online</h2>
                <p class="section-subtitle">
                    From digital products to physical goods, we've got all the tools you need to build a successful online business.
                </p>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-bolt"></i>
                    </div>
                    <h3 class="feature-title">Instant Setup</h3>
                    <p class="feature-description">
                        Start selling in minutes. No complicated setup or monthly fees to get started.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-shield-alt"></i>
                    </div>
                    <h3 class="feature-title">Secure Payments</h3>
                    <p class="feature-description">
                        We handle all payment processing securely with industry-standard encryption.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-globe"></i>
                    </div>
                    <h3 class="feature-title">Global Reach</h3>
                    <p class="feature-description">
                        Sell to customers worldwide with support for multiple currencies and languages.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-credit-card"></i>
                    </div>
                    <h3 class="feature-title">Flexible Pricing</h3>
                    <p class="feature-description">
                        Set your own prices, run sales, and offer discounts to boost your revenue.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h3 class="feature-title">Analytics</h3>
                    <p class="feature-description">
                        Track your sales, understand your customers, and optimize your business.
                    </p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6 mb-4">
                <div class="feature-card glass-effect">
                    <div class="feature-icon">
                        <i class="fas fa-users"></i>
                    </div>
                    <h3 class="feature-title">Community</h3>
                    <p class="feature-description">
                        Join thousands of creators sharing tips, strategies, and success stories.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


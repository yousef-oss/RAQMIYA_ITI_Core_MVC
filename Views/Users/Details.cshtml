@model ITI_Raqmiya_MVC.Models.User
@{
    ViewBag.Title = "User Profile";
}

<h2>@Model.Username's Profile</h2>

<div>
    <img src="@Model.ProfileImageUrl" width="100" class="img-thumbnail" />
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Creator:</strong> @Model.IsCreator</p>
    <p><strong>Description:</strong> @Model.ProfileDescription</p>
    <p><strong>Joined:</strong> @Model.CreatedAt</p>
    <p><strong>Last Login:</strong> @Model.LastLogin</p>
</div>

@if (User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.Id.ToString())
{
    <p>@Html.ActionLink("Edit My Profile", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })</p>
}
@if (User.IsInRole("Admin"))
{
    <p>@Html.ActionLink("Back to Users", "Index")</p>
}
